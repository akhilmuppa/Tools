<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#60000000" />

            <stroke android:width="1dp" android:color="#222222" />

            <corners android:radius="5dp" />

            <padding android:bottom="15dp" android:left="15dp" android:right="15dp" android:top="15dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="#60FFFFFF" android:startColor="#60FFFFFF" />

            <stroke android:width="1dp" android:color="#BCC4C9" />

            <corners android:radius="5dp" />

            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />
        </shape></item>

</selector>